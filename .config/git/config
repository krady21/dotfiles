[core]
    editor = nvim
    pager = delta

[diff]
    tool = vimdiff3
    algorithm = histogram

[difftool.vimdiff3]
    path = nvim

[merge]
    tool = vimdiff
    conflictstyle = diff3

[mergetool.vimdiff]
    path = nvim

[commit]
    verbose = true

[pull]
    ff = only

[push]
    default = simple

[rebase]
    autoStash = true

[status]
    short = true

[fetch]
    prune = true

[alias]
    a = add
    aa = add -A
    c = commit 
    ca = commit --amend
    co = checkout
    l = log --oneline --graph --decorate
    last = log -1 HEAD --stat
    p = push -u
    f = push --force-with-lease
    rh = reset --hard HEAD
    s = status
    su = submodule update --init --recursive

    fixup = "!git log -n 50 --pretty=format:'%h %s' --no-merges | fzf | cut -c -7 | xargs -o git commit --fixup"
