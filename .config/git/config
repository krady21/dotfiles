[user]
    email = bogdangrigoruta@gmail.com
    name = Bogdan Grigoruță
    username = krady21

[core]
    editor = nvim
    pager = delta

[delta]
    light = true

[diff]
    tool = vimdiff3
    algorithm = histogram

[difftool.vimdiff3]
    path = nvim

[merge]
    tool = vimdiff
    ; conflictstyle = diff3

[mergetool]
    keepBackup = false
    hideResolved = true

[mergetool.vimdiff]
    path = nvim

[commit]
    verbose = true

[pull]
    rebase = true
    ; ff = only

[push]
    ; default = simple
    default = current
    autoSetupRemote = true

[rebase]
    autoStash = true
    autosquash = true

[status]
    short = true

[fetch]
    prune = true

[alias]
    a = add
    aa = add -A

    c = commit 
    ca = commit --amend
    can = commit --amend --no-edit
    todo = commit -m "TODO"

    co = checkout
    d = diff
    s = status

    l = log --oneline --graph --decorate
    last = "!git log -1 HEAD --stat; echo -n $(git rev-parse HEAD) | xsel -ib"

    p = push origin HEAD
    f = push origin HEAD --force-with-lease

    pom = "!git pull origin master || git pull origin main"
    pum = "!git pull upstream master || git pull upstream main"

    ra = rebase --abort
    rc = rebase --continue
    ri = rebase --interactive

    rh = reset --hard HEAD
    su = submodule update --init --recursive

    fixup = "!git log -n 50 --pretty=format:'%h %s' --no-merges | fzf | cut -c -7 | xargs -o git commit --fixup"
